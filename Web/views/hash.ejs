<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <form class="login_form">
            <h2>Change your password</h2>
            <label for="password"><input type="password" name="password" placeholder="password" required/></label>
            <label for="password2"><input type="password" name="password2" placeholder="password" required/></label>
            <div class="error"></div>
            <button>Change</button>
    </form>
    <script>
        const form = document.querySelector('form');
        const error = document.querySelector('.error');
        const userEm = '<%= user.email %>';

        form.addEventListener('submit', async (e)=>{
            e.preventDefault();

            //reset errors
            error.textContent='';
            
            //get values form form
            const email = userEm;
            const password = form.password.value;
            const password2 = form.password2.value;
            if(password===password2){
                try {
                    const res = await fetch('/hash', {
                        method: 'POST',
                        body: JSON.stringify({email, password}),
                        headers: {'Content-Type': 'application/json'}
                    });
                    const data = await res.json();
                    if(data.user){
                        location.assign('/');
                    }
                    else {
                        error.textContent = "This email does not exist!";
                    }
                }
                catch (err) {}
            } else error.textContent = "Passwords are not the same!";
        });
    </script>
    <%- include('./partials/footer.ejs') %>
</body>
</html>
